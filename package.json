{
  "name": "enhanceconf-website",
  "version": "1.0.0",
  "scripts": {
    "start": "speclate --dev 5006",
    "build": "mkdir -p ./docs && npm run css && npm run js && npm run html",
    "watch": "npm run js-watch & npm run css-watch & npm run speclate-watch",
    "html": "speclate --build",
    "speclate-watch": "speclate --watch",
    "css-base": "node-sass -o ./style/ ./style/all.scss",
    "css": "npm run css-base -- --output-style compressed",
    "css-watch": "npm run css-base -- --sourcemap true --watch",
    "js": "npm run prep-js && npm run js-app && npm run js-service-worker",
    "prep-js": "mkdir -p ./docs/client",
    "js-app": "browserify ./client/index.js  | uglifyjs -mc > ./client/index-compiled.js",
    "js-service-worker": "browserify ./client/service-worker.js > ./docs/service-worker.js",
    "js-watch": "watchify ./client/index.js -o ./client/index-compiled.js"
  },
  "devDependencies": {
    "appcache-nanny": "^1.1.0",
    "browserify": "14.x.x",
    "jquery": "^3.1.1",
    "node-sass": "^4.1.1",
    "nodemon": "^1.11.0",
    "raven-js": "^3.11.0",
    "speclate": "12.0.1",
    "speclate-router": "5.4.x",
    "speclate-service-worker": "1.3.x",
    "uglifyjs": "^2.4.10",
    "watchify": "^3.8.0"
  }
}
